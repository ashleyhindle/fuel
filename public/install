#!/bin/sh
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Detect OS
OS=$(uname -s)
case "$OS" in
    Linux)
        OS_NAME="linux"
        ;;
    Darwin)
        OS_NAME="darwin"
        ;;
    *)
        printf "${RED}Error: Unsupported OS: %s${NC}\n" "$OS"
        echo "Fuel currently supports Linux and macOS (Darwin)"
        exit 1
        ;;
esac

# Detect architecture
ARCH=$(uname -m)
case "$ARCH" in
    x86_64)
        ARCH_NAME="x64"
        ;;
    arm64|aarch64)
        ARCH_NAME="arm64"
        ;;
    *)
        printf "${RED}Error: Unsupported architecture: %s${NC}\n" "$ARCH"
        echo "Fuel currently supports x86_64 and arm64"
        exit 1
        ;;
esac

# Installation directory
INSTALL_DIR="$HOME/.fuel"
BINARY_NAME="fuel"
BINARY_URL="https://github.com/ashleyhindle/fuel/releases/latest/download/fuel-${OS_NAME}-${ARCH_NAME}"

printf "${GREEN}Installing Fuel...${NC}\n"
echo "OS: $OS_NAME, Architecture: $ARCH_NAME"
echo ""

# Create install directory
mkdir -p "$INSTALL_DIR"

# Download binary
echo "Downloading from GitHub releases..."
if command -v curl >/dev/null 2>&1; then
    curl -fsSL -o "$INSTALL_DIR/$BINARY_NAME" "$BINARY_URL"
elif command -v wget >/dev/null 2>&1; then
    wget -q -O "$INSTALL_DIR/$BINARY_NAME" "$BINARY_URL"
else
    printf "${RED}Error: Neither curl nor wget found. Please install one of them.${NC}\n"
    exit 1
fi

# Make binary executable
chmod +x "$INSTALL_DIR/$BINARY_NAME"

# Add to PATH in all common shell rc files that exist
PATH_LINE="export PATH=\"\$PATH:$INSTALL_DIR\""
ADDED_TO=""

for RC_FILE in "$HOME/.zshrc" "$HOME/.bashrc" "$HOME/.bash_profile"; do
    if [ -f "$RC_FILE" ]; then
        # Check specifically for the PATH export line, not just the directory name
        if ! grep -qF "PATH=\"\$PATH:$INSTALL_DIR\"" "$RC_FILE" 2>/dev/null; then
            echo "" >> "$RC_FILE"
            echo "# Fuel CLI" >> "$RC_FILE"
            echo "$PATH_LINE" >> "$RC_FILE"
            ADDED_TO="$ADDED_TO $RC_FILE"
        fi
    fi
done

# Export PATH for current session so user doesn't need to restart terminal
export PATH="$PATH:$INSTALL_DIR"

if [ -n "$ADDED_TO" ]; then
    printf "${GREEN}Added Fuel to PATH in:%s${NC}\n" "$ADDED_TO"
else
    printf "${YELLOW}PATH already configured in shell rc files.${NC}\n"
fi

echo ""
printf "${GREEN}âœ“ Fuel installed successfully!${NC}\n"
echo ""
echo "Next steps:"
echo "  1. Start a new terminal"
echo "  2. Navigate to your project: cd your-project"
echo "  3. Initialize Fuel: fuel init"
echo ""
echo "For more information, visit: https://github.com/ashleyhindle/fuel"
