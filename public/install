#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Detect OS
OS=$(uname -s)
case "$OS" in
    Linux)
        OS_NAME="linux"
        ;;
    Darwin)
        OS_NAME="darwin"
        ;;
    *)
        echo -e "${RED}Error: Unsupported OS: $OS${NC}"
        echo "Fuel currently supports Linux and macOS (Darwin)"
        exit 1
        ;;
esac

# Detect architecture
ARCH=$(uname -m)
case "$ARCH" in
    x86_64)
        ARCH_NAME="x86_64"
        ;;
    arm64|aarch64)
        ARCH_NAME="arm64"
        ;;
    *)
        echo -e "${RED}Error: Unsupported architecture: $ARCH${NC}"
        echo "Fuel currently supports x86_64 and arm64"
        exit 1
        ;;
esac

# Installation directory
INSTALL_DIR="$HOME/.fuel"
BINARY_NAME="fuel"
BINARY_URL="https://github.com/ashleyhindle/fuel/releases/latest/download/fuel-${OS_NAME}-${ARCH_NAME}"

echo -e "${GREEN}Installing Fuel...${NC}"
echo "OS: $OS_NAME"
echo "Architecture: $ARCH_NAME"
echo ""

# Create install directory
mkdir -p "$INSTALL_DIR"

# Download binary
echo "Downloading binary from $BINARY_URL..."
if command -v curl >/dev/null 2>&1; then
    curl -L -o "$INSTALL_DIR/$BINARY_NAME" "$BINARY_URL"
elif command -v wget >/dev/null 2>&1; then
    wget -O "$INSTALL_DIR/$BINARY_NAME" "$BINARY_URL"
else
    echo -e "${RED}Error: Neither curl nor wget found. Please install one of them.${NC}"
    exit 1
fi

# Make binary executable
chmod +x "$INSTALL_DIR/$BINARY_NAME"

# Detect shell and add to PATH
SHELL_RC=""
if [ -n "$ZSH_VERSION" ]; then
    SHELL_RC="$HOME/.zshrc"
elif [ -n "$BASH_VERSION" ]; then
    SHELL_RC="$HOME/.bashrc"
else
    # Try to detect from $SHELL
    case "$SHELL" in
        */zsh)
            SHELL_RC="$HOME/.zshrc"
            ;;
        */bash)
            SHELL_RC="$HOME/.bashrc"
            ;;
        *)
            echo -e "${YELLOW}Warning: Could not detect shell. Please manually add $INSTALL_DIR to your PATH.${NC}"
            SHELL_RC=""
            ;;
    esac
fi

# Add to PATH if shell RC file exists or can be created
if [ -n "$SHELL_RC" ]; then
    PATH_LINE="export PATH=\"\$PATH:$INSTALL_DIR\""
    
    if [ -f "$SHELL_RC" ]; then
        # Check if already in PATH
        if ! grep -q "$INSTALL_DIR" "$SHELL_RC" 2>/dev/null; then
            echo "" >> "$SHELL_RC"
            echo "# Fuel CLI" >> "$SHELL_RC"
            echo "$PATH_LINE" >> "$SHELL_RC"
            echo -e "${GREEN}Added Fuel to PATH in $SHELL_RC${NC}"
        else
            echo -e "${YELLOW}Fuel is already in PATH in $SHELL_RC${NC}"
        fi
    else
        # Create shell RC file if it doesn't exist
        echo "$PATH_LINE" > "$SHELL_RC"
        echo -e "${GREEN}Created $SHELL_RC and added Fuel to PATH${NC}"
    fi
fi

echo ""
echo -e "${GREEN}âœ“ Fuel installed successfully!${NC}"
echo ""
echo "Next steps:"
echo "  1. Restart your terminal or run: source $SHELL_RC"
echo "  2. Navigate to your project: cd your-project"
echo "  3. Initialize Fuel: fuel init"
echo ""
echo "For more information, visit: https://github.com/ashleyhindle/fuel"
